<div class="chat-container mt-3">
  <h2 class=" text-center m-4">Messagerie</h2>
  <div class="messaging">
    <div class="inbox_msg">
      <div class="inbox_people">
        <div class="headind_srch">
          <div class="recent_heading">
            <h4>Mes conversations</h4>
          </div> 
        </div>
        <div class="inbox_chat">
          <% @conversations.each_with_index do |conversation, index| %>
          <a href="<%=conversation_messages_path(conversation)%>">
            <div class="chat_list active_chat chat_focus" tabindex="<%= index %>">
              <div class="chat_people">
                <div class="chat_img_container"> 
                <%if conversation.receiver.avatar.attached?%>
                    <%= image_tag conversation.receiver.avatar, class:"chat_img"%>
                    <% else %>
                      <%= image_tag "kirua.jpg", class:"chat_img"%>
                    <%end%>
                 
                </div>
                <div class="chat_ib mt-4">
                  <%= conversation.recipient(current_user).name%>
                  <% if !conversation.unread_message_count(current_user).zero? %>
                    (<%= conversation.unread_message_count(current_user) %>)
                  <% end %>
                  <% if current_user == @conversation.library_item.user %>
                    <%= link_to 'Confirmer la demande', library_item_path(@conversation.library_item), method: 'PUT', class: 'btn btn-danger'%>
                  <% end %>
                </div>
              </div>
            </div>
            </a>
          <% end %>
        </div>
      </div>
      <div class="mesgs">
        <div class="msg_history">
          <% @messages.each do |message| %>
            <% if message.body %>
              <% if message.user == current_user%>
                <div class="outgoing_msg">
                  <div class="sent_msg">
                    <p><%= message.body %></p>
                    <span class="time_date"> <%= message.message_time%></span> 
                  </div>
                </div>
                <% else%>
                <div class="incoming_msg">
                  <div class="incoming_msg_img"> 
                    <%if message.user.avatar.attached?%>
                      <%= image_tag message.user.avatar%>
                    <% else %>
                      <%= image_tag "kirua.jpg"%>
                    <%end%>  
                  </div>
                  <div class="received_msg">
                    <div class="received_withd_msg">
                      <p><%= message.body %></p>
                      <span class="time_date"><%= message.message_time%></span>
                    </div>
                  </div>
                 </div>
                <% end %>
              <% end %>
            <% end %>
          </div>
          <div class="type_msg">
            <div class="input_msg_write">
              <%= form_for [@conversation, @message] do |f| %>
                <div class="container_msg_write">
                <%= f.text_area :body, placeholder: "Ecris ton message", class: 'write_msg' %>
                <%= f.submit "Send", class: "btn btn-secondary" %>             
              <% end %>
            </div>
          </div>
        </div>
      </div> 
    </div>
  </div>
</div>    
