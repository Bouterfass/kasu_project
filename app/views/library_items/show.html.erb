

<h4 class="container pt-5 p-3"> Demande du manga <strong><%= @item.manga.title.capitalize %></strong>  à <strong><%= @item.user.name %> </strong></h4>


<div class="container p-5">

    <div class="row">
        <div class="col-3 d-flex justify-content-end align-items-center">
            <img src="<%= @item.manga.image_url %>" size="10%">       
        </div>
        <div class="col-4">
                <p><strong>Titre</strong>: <%= @item.manga.title %></p>
                <p><strong>Propriétaire</strong>: <%= @item.user.name %></p>
                <p><strong>Etat</strong>: <%= @item.state_description %></p>
        </div>
        <div class="col-4 mt-5">
                <p><strong>Passer commande</strong></p>
                <%= link_to 'Je confirme', conversations_path(sender_id: current_user.id, receiver_id: @item.user.id, library_item_id: @item.id), method: :post, class: 'btn btn-danger' %>
        </div>
    </div>


    <div class="row d-flex pt-5 pl-5">
        <h2>D'autres manga de <%= @item.user.name %></h2> 
    </div>
     <div class="row d-flex ml-5">
     <ul class="ml-5">
        <% @item.user.mangas.each do |manga| %>
            <% if manga.title != @item.manga.title %>
           <li>     <%= manga.title %><br/> </li>
            <% end  %>
        <% end %>
    </ul>
    </div>


        <div class="row d-flex justify-content-around p-5 pb-5">
      <%= link_to "Retour à la page d'accueil", mangas_path, class: 'btn btn-primary' %>
    </div>


</div>