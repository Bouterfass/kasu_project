
<div class='container'>
	<div class="container-fluid mt-2">
		<div class="row m-2 card-all">
			<% @items.each do |item|%>
				<% if item.user != current_user %>	
		<article class="card-last-manga card--1">
			<div class="card__img" style="background-image: url('<%= item.manga.image_url %>')"></div>
			<a href="#" class="card_link">
			<div class="card__img--hover" style="background-image: url('<%= item.manga.image_url %>')"></div>
			</a>
			<div class="card__info">
			<h3 class="card__title"><%= item.manga.title %></h3>
			<span><small><em>Tome: </em> <%= item.volume %></small></span><br/>
				<% item.manga.categories.each do |category| %>
					<%= link_to category.name, category_path(category.id), class: "category-card" %><% if item.manga.categories.last != category %>, <% end %>
				<%end%><br/>
			<span class="card__by">by <%= item.manga.author %></span>
			  <p><small><em>possédé par </em> <%= item.user.name %></small></p>
			<%= link_to "Voir son manga", library_item_path(item), class: 'btn btn-info mt-2'%>
			</div>
		</article>
			<% end %>	
		          <% end %>
	  	</div>
<%= pagy_bootstrap_nav(@pagy).html_safe%>
	</div>
</div>