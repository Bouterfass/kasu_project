<% if @manga.cover.attached?%>
<%= image_tag @manga.ima %>
<%else%>
  <p>=== Il n'y a pas encore d'image liée à ce manga ===</p>
<%end%>

<%= @manga.title %>
<%= @manga.description %>
<%= @manga.author %>

<%= link_to "Ajouter à ma Bibliothèque", manga_library_items_path(@manga.id), method: "POST" %>

<div class="container">
    <div class="row">
       
        <div class="col-12 col-lg-6">
            <div class="card bg-light mb-3">
                <div class="card-body">
                    <a href="" data-toggle="modal" data-target="#productModal">
                        <img class='image-show' src="<%= @manga.image_url %>" alt="Manga-item">
                    </a>
                </div>
            </div>
        </div>

        <div class="col-12 col-lg-6 add_to_cart_block">
            <div class="card bg-light mb-3">
                <div class="card-body">
                    <p class="price">99.00 $</p>
                    <p class="price_discounted">149.90 $</p>
                    <form method="get" action="cart.html">
                        <div class="form-group">
                            <label for="colors">Color</label>
                            
                        </div>
                        
                        <a href="cart.html" class="btn btn-info btn-lg btn-block text-uppercase">
                            <i class="fa fa-shopping-cart"></i> Add To Cart
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card border-light mb-3">
                <div class="card-header bg-primary text-white text-uppercase"><i class="fa fa-align-justify"></i> Description</div>
                <div class="card-body">
                    <p class="card-text">
