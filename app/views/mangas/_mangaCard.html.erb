

<div class='container'>
	<h2 class='text-center display-3'> Notre collection</h2>
	<div class="container-fluid mt-2">
		<div class="row m-2 card-all">
			<% @mangas.each do |manga|%>
					
		<article class="card-last-manga card--1">
			<div class="card__img" style="background-image: url('<%= manga.image_url %>')"></div>
			<a href="#" class="card_link">
			<div class="card__img--hover" style="background-image: url('<%= manga.image_url %>')"></div>
			</a>
			<div class="card__info">
			<h3 class="card__title"><%= manga.title.capitalize %></h3>
			<span class="card__by">by <%= manga.author%></span>
			<%= link_to "Voir les utilisateurs", manga_path(manga), class: 'btn btn-info mt-2'%>
			</div>
		</article>
					
			<% end %>
		</div>
		<%= pagy_bootstrap_nav(@pagy).html_safe%>
	</div>
</div>